<h1>Shoe Shop</h1>

<div class="products">
  <% @products.each do |product| %>
    <%= react_component("ProductBox",
      {
        title: product.title,
        price: product.price,
        imagePath: product_image_url(product.id),
        productURL: "##{product.title}"
      },
      {
        class: "product-box-container"
      })
    %>
  <% end %>
</div>
